<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
  <persistence-unit name="tiendaPU" transaction-type="RESOURCE_LOCAL">
    <!-- Lista de entidades -->
    <class>com.teamcoders.modelo.Articulo</class>
    <class>com.teamcoders.modelo.Cliente</class>
    <class>com.teamcoders.modelo.ClienteEstandar</class>
    <class>com.teamcoders.modelo.ClientePremium</class>
    <class>com.teamcoders.modelo.Pedido</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/TeamCodersBD"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="root1234"/>
      <property name="jakarta.persistence.jdbc.driver"
                value="com.mysql.cj.jdbc.Driver"/>

      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
      <property name="hibernate.use_sql_comments" value="false"/>


      <property name="hibernate.dialect"
                value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
