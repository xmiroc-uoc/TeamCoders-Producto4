<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/TeamCodersBD</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root123</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="show_sql">true</property>
        <!-- Add mapping resources here -->
        <mapping class="com.teamcoders.modelo.Articulo"/>
        <mapping class="com.teamcoders.modelo.Cliente"/>
        <mapping class="com.teamcoders.modelo.ClienteEstandar"/>
        <mapping class="com.teamcoders.modelo.ClientePremium"/>
        <mapping class="com.teamcoders.modelo.Pedido"/>
    </session-factory>
</hibernate-configuration>